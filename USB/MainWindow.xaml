<Window x:Class="USB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:USB"
        mc:Ignorable="d"
        Title="USBHUB   TOPO" Height="100" Width="400" Initialized="Window_Initialized">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="连接" HorizontalAlignment="Left" Margin="122,0,0,0" VerticalAlignment="Top" Width="76" Click="button_Click"/>
        <Button x:Name="button1" Content="关闭" HorizontalAlignment="Left" Margin="201,0,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        <Border x:Name="OpenShow"  Background="Red" CornerRadius="20" Height="20" Width="20"  VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Grid Height="30" Width="400" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="Show1" Grid.Column="0" Background="Red" CornerRadius="20" Height="20" Width="20"/>
            <Border x:Name="Show2" Grid.Column="1" Background="Red" CornerRadius="20" Height="20" Width="20"/>
            <Border x:Name="Show3" Grid.Column="2" Background="Red" CornerRadius="20" Height="20" Width="20"/>
            <Border x:Name="Show4" Grid.Column="3" Background="Red" CornerRadius="20" Height="20" Width="20"/>
            <Border x:Name="Show5" Grid.Column="4" Background="Red" CornerRadius="20" Height="20" Width="20"/>
            <Border x:Name="Show6" Grid.Column="5" Background="Red" CornerRadius="20" Height="20" Width="20"/>
            <Border x:Name="Show7" Grid.Column="6" Background="Red" CornerRadius="20" Height="20" Width="20"/>
            <Border x:Name="Show8" Grid.Column="7" Background="Red" CornerRadius="20" Height="20" Width="20"/>
            <Border x:Name="Show9" Grid.Column="8" Background="Red" CornerRadius="20" Height="20" Width="20"/>

            <Button x:Name="Button1" Template="{StaticResource imageButtonTemplate}" Grid.Column="0" Click="Send_Click" Content="1" Tag="1"/>
            <Button x:Name="Button2" Template="{StaticResource imageButtonTemplate}" Grid.Column="1" Click="Send_Click" Content="2" Tag="1"/>
            <Button x:Name="Button3" Template="{StaticResource imageButtonTemplate}" Grid.Column="2" Click="Send_Click" Content="3" Tag="1"/>
            <Button x:Name="Button4" Template="{StaticResource imageButtonTemplate}" Grid.Column="3" Click="Send_Click" Content="4" Tag="1"/>
            <Button x:Name="Button5" Template="{StaticResource imageButtonTemplate}" Grid.Column="4" Click="Send_Click" Content="5" Tag="1"/>
            <Button x:Name="Button6" Template="{StaticResource imageButtonTemplate}" Grid.Column="5" Click="Send_Click" Content="6" Tag="1"/>
            <Button x:Name="Button7" Template="{StaticResource imageButtonTemplate}" Grid.Column="6" Click="Send_Click" Content="7" Tag="1"/>
            <Button x:Name="Button8" Template="{StaticResource imageButtonTemplate}" Grid.Column="7" Click="Send_Click" Content="8" Tag="1"/>
            <Button x:Name="Button9" Template="{StaticResource imageButtonTemplate}" Grid.Column="8" Click="Send_Click" Content="9" Tag="1"/>
        </Grid>
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Margin="277,1,0,0" VerticalAlignment="Top" Width="75"  Click="button2_Click_1"/>
    </Grid>
</Window>
